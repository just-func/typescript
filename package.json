{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "depcheck": "turbo run depcheck",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "prepare": "husky install",
