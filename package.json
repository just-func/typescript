{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "dev": "turbo run dev --parallel",
    "jf": "pnpm --filter just-func",
    "just-func": "pnpm --filter just-func",
    "lint": "turbo run lint",
    "prepare": "husky",
    "nuke": "turbo run nuke && rimraf node_modules",
