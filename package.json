{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "dev": "turbo run dev --parallel",
    "just-func": "yarn workspace just-func",
    "lint": "turbo run lint",
    "publish": "yarn cs publish",
    "prepare": "husky install",
    "nuke": "turbo run nuke",
    "nuke:local": "rimraf node_modules || true",
    "release": "turbo run build",
    "size": "turbo run size",
    "test": "turbo run test",
    "types": "yarn workspace @just-func/types",
    "version": "yarn cs version",
    "verify": "turbo run lint build coverage depcheck size",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@changesets/cli": "2.23.1",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "eslint": "8.19.0",
    "husky": "8.0.1",
    "jest": "28.1.2",
    "jest-progress-tracker": "3.0.4",
    "jest-validate": "28.1.1",
    "jest-watch-repeat": "2.0.0",
    "jest-watch-suspend": "1.1.2",
    "jest-watch-toggle-config": "2.0.1",
    "jest-watch-typeahead": "2.0.0",
    "npm-check-updates": "15.2.5",
    "rimraf": "3.0.2",
    "turbo": "latest",
    "typescript": "4.7.4"
  },
  "packageManager": "yarn@3.2.1"
}
